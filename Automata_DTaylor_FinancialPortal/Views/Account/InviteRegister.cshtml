    Layout = null;
}
@model Automata_DTaylor_FinancialPortal.Models.InviteRegisterViewModel
<meta content="DT FinancialPortal" name="description" />
<meta content="Drew Taylor" name="author" />

<!-- ================== BEGIN BASE CSS STYLE ================== -->
