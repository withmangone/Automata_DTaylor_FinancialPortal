@model Automata_DTaylor_FinancialPortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

@{
    Layout = null;
}

<!-- ================== BEGIN BASE CSS STYLE ================== -->
